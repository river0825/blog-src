{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "init": "git clone https://github.com/theme-next/hexo-theme-next themes/next; npm install bower; npm install hexo-cli; npm install ",
    "generate": "cp ./_config.next.yml ./themes/next/_config.yml; ./node_modules/.bin/hexo generate",
    "deploy": "cp ./_config.next.yml ./themes/next/_config.yml; bash ./track-time.sh; ./node_modules/.bin/hexo deploy",
    "clean": "./node_modules/.bin/hexo clean",
    "next": "cp ./_config.next.yml ./themes/next/_config.yml",
    "watch": "cp ./_config.next.yml ./themes/next/_config.yml; ./node_modules/.bin/hexo generate -w",
    "live": "./node_modules/.bin/live-server ./public"
  },
  "hexo": {
    "version": "4.0.0"
  },
  "dependencies": {
    "bower": "^1.8.8",
    "hexo": "^4.0.0",
    "hexo-cli": "^3.1.0",
    "hexo-deployer-git": "^2.0.0",
    "hexo-filter-mermaid-diagrams": "^1.0.5",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-seo-friendly-sitemap": "0.0.25",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-jade": "^0.5.0",
    "hexo-renderer-kramed": "^0.1.4",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0",
    "hexo-slides-reveal": "0.0.5",
    "hexo-tag-plantuml": "^1.0.0",
    "live-server": "^1.2.1"
  }
}
